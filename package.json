{
    "name": "launch-goblin-bot",
    "version": "1.0.0",
    "description": "Telegram bot for deploying tokens on Base using Clanker SDK",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "simple": "node launch-goblin-simple.js",
        "simple:dev": "nodemon launch-goblin-simple.js",
        "enhanced": "node launch-goblin-enhanced.js",
        "enhanced:dev": "nodemon launch-goblin-enhanced.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:ipfs": "node tests/test-ipfs-integration.js",
        "test:db": "node tests/test-database.js",
        "test:clanker": "node tests/test-clanker-v4-compliance.js",
        "test:clanker-v4": "node test-clanker-v4.js",
        "test:config": "node test-config-validation.js",
        "test:integration": "node tests/run-all-tests.js"
